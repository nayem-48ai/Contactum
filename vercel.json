{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
    // "public/**" এর জন্য আলাদা "build" সেকশন দরকার নেই যদি এটি শুধু স্ট্যাটিক ফাইল সার্ভ করে
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1" // এটি public ফোল্ডারের ফাইলগুলোকে রুট পাথে সার্ভ করবে
    }
  ]
}
